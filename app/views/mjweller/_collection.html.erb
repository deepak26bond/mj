<div class="row">
	<% if @item%>
	<%setter 4%>
	<%@silver = @item.select { |silver| silver.price_detail.id ==getter }
                  
%>
					<%@silver.each do|s|%>
					
					<%end%>
	<% @item.each do |item|%>
	<div class="col-md-4">
		<div  class="iteam-grid text-center" style="height: 320px">
