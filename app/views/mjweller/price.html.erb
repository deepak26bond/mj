<div class="container">
	<div class="row">
		<div class="col-md-8 col-md-offset-2">

			<div class="panel panel-default">

				<div class="panel-heading">
					<%if error %>

					<div class="error" >
						<ul>
							<% error.each do |message| %>
							<li>
								<%= message %>
							</li>
							<% end %>
							<span style="color: green"><%= sussces%></span></li>

						</ul>

					</div>

					<%end%>
					<%if sussces %>

					<div  >
						<ul>
							
							
							<span style="color: green"><%= sussces%></span></li>

						</ul>

					</div>

					<%end%>

					
					<div class="panel-title">
						Add New Category
					</div>

				</div>

				<div class="panel-body">

					<div class="col-md-8">
						<form action="/mjweller/add_price" method="post" role="form">

							<div class="form-group">
								<label for="class">Name</label>
								<div class="input-group">
									<input type="text" name="pricedata[name]" id="class" placeholder="Item name" class="form-control" required="">
										
									<span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
								</div>
							</div>
							<div class="form-group">
								<label for="class">price per gram</label>
								<div class="input-group">
									<input type="number" class="form-control" id="mobile" name="pricedata[price]" placeholder=" Enter price" step=".01" min=".1" required autocomplete="off">
									<span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
								</div>

							</div>
							<div class="form-group">

								<div class="input-group">
									<input type="submit" value="add item" class="btn btn-primary"/>

								</div>
							</div>
						</form>
					</div>
				</div>
				<div class="panel-footer">
					footer
				</div>

			</div>

		</div>
	</div>
</div>
