<%if @total%>
<table class="table">
<tr> <th>image</th>
	 <th>Name</th>
	 <th>Description</th>
	 <th>weight</th>
	 <th>category</th>
	 <th>subcategory</th>
	 <th>quantity</th>
    <th>Update</th>
